@model List<SistemaFacturacionInventario.ViewModels.UserRoles>
@{
    ViewBag.Title = "Index";
}
<!-- Page heading -->
<div class="page-head">
    <!-- Page heading -->
    <h2 class="pull-left">
        Configurar Roles
        <!-- page meta -->
        <span class="page-meta">Edite el Rol de cada usuario del Sistema</span>

    </h2>
    <div class="clearfix"></div>
</div>
<!-- Page heading ends -->

<div class="matter">
    <div class="container">
        <div class="row">


            <div class="col-md-12">

                <div class="widget wred">

                    <div class="widget-head">
                        <div class="pull-left">Usuarios</div>
                        <div class="widget-icons pull-right">
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="widget-content">

                        <table class="table table-bordered ">
                            <thead>
                                <tr>
                                    <td><strong>Foto</strong></td>
                                    <td><strong>Usuario</strong></td>
                                    <td><strong>Nombres y Apellidos</strong></td>
                                    <td><strong>Rol</strong></td>
                                </tr>
                            </thead>
                            <tbody id="">
                                @{foreach (var m in Model)
                                    {
                                        <tr>
                                            @{
                                                var base64 = Convert.ToBase64String(m.Foto);
                                                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                                            }
                                            <td><img src="@imgsrc" class="img-rounded" style="max-height:100px;max-width:100px" /></td>
                                            <td>@m.Username</td>
                                            <td>@m.Nombre @m.Apellido</td>

                                            <form method="post" action="/Roles/Actualizar">
                                                <td>
                                                    <select class="form-control col-md-2" id="Rol" name="Rol">
                                                        @{
                                                            if (@m.Role == "Administrador")
                                                            {
                                                                <option value="1" selected>Administrador</option>
                                                                <option value="2">Cajero</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="1">Administrador</option>
                                                                <option value="2" selected>Cajero</option>
                                                            }
                                                        }
                                                    </select>
                                                    <button style="margin-left:1%" name="Username" id="Username" value="@m.Username" class="btn btn-info btn-sm">Guardar</button>
                                                </td>
                                            </form>
                                        </tr>
                                        
                                    }
                                }
                            </tbody>
                        </table>

                    </div>

                    <div class="widget-foot">


                        <ul class="pagination pull-right">
                            <li><a href="#">Prev</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">Next</a></li>
                        </ul>

                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>










